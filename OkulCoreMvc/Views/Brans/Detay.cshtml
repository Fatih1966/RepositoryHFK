@model ICollection<Okul.Entity.Models.Ogretmen>

<h3>Ogretmen Listesi</h3>

<hr>

<a asp-action="Create" class="btn btn-success">Ekle</a>
<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <td>Ogretmen Id</td>
                <td>Ogretmen Adi</td>
                <td>Ogretmen Soyadi</td>
                <td>Ogretmen TcKimlik</td>
                <td>Ogretmen Email</td>
                <td>Ogretmen Gsm</td>

                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Ad</td>
                    <td>@item.Soyad</td>
                    <td>@item.TCKimlik</td>
                    <td>@item.Email</td>
                    <td>@item.CepTelefonu</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">Guncelle</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
